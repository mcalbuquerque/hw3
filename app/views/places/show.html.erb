<h1><%=@place.name%></h1>

<% for post in @place.posts%>

    <h3><%=post.title%></h3>
    <p><%=post.posted_on%></p>
    <p><%=post.description%></p>
<% end %>
<br>

<p>
    <a href="/posts/new?place_id=<%= @place.id %>&place=<%=@place.name%>">New Post</a>
</p>

<p>
  <a href="/places">All Places</a>
</p>